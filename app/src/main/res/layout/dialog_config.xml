<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtWorkTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            android:contentDescription="work time"
            android:layout_margin="18dp"
            android:inputType="number"
            android:hint="Tempo de trabalho em minutos"
            android:maxLength="2"
            />


        <EditText
            android:id="@+id/txtRestTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtWorkTime"
            tools:layout_editor_absoluteX="0dp"
            android:contentDescription="rest time"
            android:layout_margin="18dp"
            android:inputType="number"
            android:hint="Tempo de descanso em minutos"
            android:maxLength="2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>